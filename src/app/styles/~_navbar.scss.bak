.navbar-inverse {
  border-radius: 0;
  margin-bottom: 0;
  border-bottom: 1px solid rgba(255, 255, 255, .3);
  text-transform: uppercase;
  font-family: Montserrat, "Helvetica Neue", Helvetica, Arial, sans-serif;
  background-color: $nearBlack;
  z-index: auto;

  .navbar-header {
//    background-color: khaki;
    width: 25rem;
//position: relative;

  }
  .container-fluid {
//    background-color: #3a9caf;
  }

  .navbar-collapse {
//    background-color: yellow;
    float: right;
  }

  .navbar-nav {
    & > li {
      & > a {
        -webkit-transition: .5s all ease-in-out;
        -moz-transition: .5s all ease-in-out;
        -ms-transition: .5s all ease-in-out;
        -o-transition: .5s all ease-in-out;
        transition: .5s all ease-in-out;
        color: $nearWhite;
        font-size: 2.5rem;
        @include shadow;
      }
    }

    .dropdown-menu {
      & > li {
        & > a {
          margin-top: 1rem;
          color: $nearWhite;
          font-size: 2rem;
        }
      }
    }

    .dot {
      color: $nearWhite;
      font-size: 3vmin;
    }
  }

  .dropdown-toggle .glyphicon {
    float: right;
    //    top: -4px;
    left: 4px;

    //    text-shadow: 2px 5px 4px rgba(1, 1, 1, .7);
  }

  .navbar-brand:focus,
  .navbar-brand:active,
  .navbar-nav li a:focus,
  .navbar-nav li a:active {
    outline: none;
  }

  .navbar-nav li a:hover,
  .navbar-nav .active {
    outline: none;
    background-color: rgba(255, 255, 255, .3);
  }


  .navbar-brand {

    -webkit-transition: padding .5s ease;
    -moz-transition: padding .5s ease;
    -ms-transition: padding .5s ease;
    -o-transition: padding .5s ease;
    transition: padding .5s ease;

    color: $nearWhite;
    font-weight: 700;
    font-size: 3.75rem;
    @include shadow;
    width: 40vw;
    height: 100%;
    line-height: 100%;
//    background-color: green;

//height: 0;
//    padding-top: 2.5rem;
//    padding: 2rem;
    

  }

  .address {
    padding-top: 1rem;
    font-size: 2.8rem;
    color: $nearWhite;
    @include shadow;
  }

  .phone {
    margin-top: 2rem;
    margin-bottom: 2rem;
    font-size: 3rem;
    color: $nearWhite;
    padding-top: 3rem;
    width: 21rem;

    @include shadow;

//background-color: navy;


  }
  .brand-wrapper {
    display: inline-block;
  }
}

@media (max-width: 768px) {
  .navbar-inverse {
    .navbar-nav {
      & > li {
        & > a {
          font-size: 4vmax;
        }
      }
      .open {
        .dropdown-menu {
          & > li {
            padding-top: 1vmax;
            & > a {
              font-size: 4vmax;
              color: $nearWhite;
            }
          }
        }
      }
    }

    .navbar-header {
//      background-color: red;
//      float: right;
//      position: relative;
//      width: 100%;
//      height: 16rem;

    }

    .navbar-brand {
      top: 1rem;
//      background-color: #ff94a5;
      position: absolute;
      left:0;
      height: 10px;
//      display: inline;
//      position: relative;
//      line-height: auto;
      color: $nearWhite;
      @include shadow;
//      float:left;
      width: 70vw;
      padding-top: .75rem;
//      padding-left: .5rem;
    }
  }




  .address {
    display: none;
  }

  .phone {
    display: none;
  }
}

@media (min-width: 767px) {

  .navbar-inverse {
    padding: 20px 0;
    border-bottom: 0;
    letter-spacing: 1px;
    background: 0 0;
    -webkit-transition: all .5s ease-in-out;
    -moz-transition: all .5s ease-in-out;
    transition: all .5s ease-in-out;

    pointer-events: none;

    &.darken {
      pointer-events: auto;
    }

  }

  .navbar-brand {
    pointer-events: auto;
    &.darken {
      top: 0;
    }
  }


  .address {
    -webkit-transition: opacity .7s ease;
    -moz-transition: opacity .7s ease;
    -ms-transition: opacity .7s ease;
    -o-transition: opacity .7s ease;
    transition: opacity .7s ease;

    &.darken {

      opacity: 0;
      height: 0;
      visibility: hidden;
    }

  }
  .phone {

    -webkit-transition: margin .5s ease;
    -moz-transition: margin .5s ease;
    -ms-transition: margin .5s ease;
    -o-transition: margin .5s ease;
    transition: margin .5s ease;

//    background-color: blue;

    &.darken {
      margin-top: 4rem;
//      background-color: chartreuse;
    }
  }

  .navbar-nav {
    & > li {

      margin-top: 1rem;
      pointer-events: auto;

      & > a.darken {

        -webkit-transition: all .5s ease-in-out;
        -moz-transition: all .5s ease-in-out;
        -ms-transition: all .5s ease-in-out;
        -o-transition: all .5s ease-in-out;
        transition: all .5s ease-in-out;

        margin-top: 3rem;
        height: 100%;
      }
    }
  }

  .dropdown-menu {

    border: none;
    outline: none;
    right: auto;
    background-color: rgba(0, 0, 0, .5);
    &.darken {
      background-color: $nearBlack;
    }
  }

  .darken {
    padding: 0;
    background-color: $nearBlack;
    box-shadow: 0 .7rem 5px rgba(1, 1, 1, .3);
  }

  .navbar.darken {
    border-bottom: 1px solid rgba(255, 255, 255, .3);
  }

  .dropdown-menu.dropdownCollapse {
    //    background-color: rgba(0, 0, 0, .3);
  }

}

